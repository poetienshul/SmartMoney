<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bryce.smartmoney">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".vars"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Savings"
            android:label="@string/title_activity_save"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Costs"
            android:label="@string/title_activity_bills"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".income" />
        <activity android:name=".newCost" />
        <activity android:name=".newSave" />
    </application>

</manifest>
