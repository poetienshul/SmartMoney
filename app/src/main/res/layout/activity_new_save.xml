<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/side_nav_bar"
    tools:context="com.example.bryce.smartmoney.newSave">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add saving"
        android:id="@+id/add"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/can"
        android:layout_alignTop="@+id/add"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Saving"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:textOff="%"
        android:textOn="$"
        android:checked="false"
        android:layout_alignBottom="@+id/costtext"
        android:layout_toLeftOf="@+id/costtext"
        android:layout_toStartOf="@+id/costtext" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/costtext"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/nametext"
        android:layout_toRightOf="@+id/add"
        android:layout_toEndOf="@+id/add" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nametext"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/costtext"
        android:layout_alignEnd="@+id/costtext"
        android:layout_toRightOf="@+id/add"
        android:layout_toEndOf="@+id/add" />


</RelativeLayout>
